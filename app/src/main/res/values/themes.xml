<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AdminPeminjamanMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_400</item>
        <item name="colorPrimaryVariant">@color/orange_400</item>
        <item name="colorSecondaryContainer">@color/orange_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.AdminPeminjamanMobile" parent="Base.Theme.AdminPeminjamanMobile" />

    <style name="roundHomeContainer" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="roundItemLoanFacilityImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="roundItemHomeManageRoom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="roundImageViewAddImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="roundFabShape" parent="">
        <item name="cornerSize">100dp</item>
    </style>

    <style name="tabText" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>